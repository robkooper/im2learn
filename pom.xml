<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>edu.illinois.ncsa.isda</groupId>
	<artifactId>imagetools-hdf</artifactId>
	<version>3.0.0-SNAPSHOT</version>
	<packaging>jar</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>edu.illinois.ncsa.isda</groupId>
			<artifactId>imagetools-core</artifactId>
			<version>3.0.0-SNAPSHOT</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.1.1</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.hdfgroup</groupId>
			<artifactId>jhdf</artifactId>
			<version>2.5</version>
			<scope>system</scope>
			<systemPath>${basedir}/lib/jhdf-2.5.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.hdfgroup</groupId>
			<artifactId>jhdf4obj</artifactId>
			<version>2.5</version>
			<scope>system</scope>
			<systemPath>${basedir}/lib/jhdf4obj-2.5.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.hdfgroup</groupId>
			<artifactId>jhdf5</artifactId>
			<version>2.5</version>
			<scope>system</scope>
			<systemPath>${basedir}/lib/jhdf5-2.5.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.hdfgroup</groupId>
			<artifactId>jhdfobj</artifactId>
			<version>2.5</version>
			<scope>system</scope>
			<systemPath>${basedir}/lib/jhdfobj-2.5.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>org.hdfgroup</groupId>
			<artifactId>jhdf5obj</artifactId>
			<version>2.5</version>
			<scope>system</scope>
			<systemPath>${basedir}/lib/jhdf5obj-2.5.jar</systemPath>
		</dependency>
	</dependencies>

</project>